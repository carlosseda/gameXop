{
  "font-loader-component": {
    "font": "Lato:wght@400;700"
  },
  "delete-element-modal-component": {},
  "image-gallery-component": {
    "data": true,
    "endpoint": "/api/admin/image-gallery",
    "fetch": "/"
  },
  "message-component": {},
  "header-component": {
    "slot": {
      "row-component": {
        "template-columns": "8fr 2fr", 
        "element-distribution": "1,2", 
        "justify-contents": "flex-start,flex-end",
        "slot": {
          "logo-component": {
            "title": "GameXop"
          },
          "menu-component": {
            "data": true,
            "endpoint": "/api/admin/menus",
            "fetch": "/display/main-menu"
          },
          "user-area-component": {
            "endpoint": "/api/admin/users/user-area"
          }
        }
      }
    }
  },
  "main-component":{
    "slot": {
      "crud-component": {
        "slot": {
          "table-filter-component": {
            "slot": "filter",
            "endpoint": "/api/admin/users"
          },
          "table-component": {
            "slot": "table",
            "data": true,
            "endpoint": "/api/admin/users",
            "select": "name email createdAt updatedAt",
            "paginate": "10",
            "structure": {
              "headers": [
                {"label": "Nombre", "field": "name"},
                {"label": "Email", "field": "email"},
                {"label": "Fecha de creación", "field": "createdAt"},
                {"label": "Fecha de actualización", "field": "updatedAt"}
              ],
              "recordButtons": ["edit", "remove"],
              "tableButtons": ["filterButton"]
            }
          },
          "form-component": {
            "slot": "form",
            "endpoint": "/api/admin/users",
            "structure": {
              "tabs": [
                {"name": "general", "label": "General"},
                {"name": "images", "label": "Imágenes"}
              ],
              "inputs": {
                "general": {
                  "noLocale": [
                    {"name": "id", "element":"input", "type": "hidden"},
                    {"name": "name", "element":"input", "type": "text", "label": "Nombre", "width": "half-width"},
                    {"name": "email", "element":"input", "type": "email", "label": "Email", "width": "half-width"},
                    {"name": "password", "element":"input", "type": "password", "label": "Contraseña", "width": "half-width"},
                    {"name": "password_confirmation", "element":"input", "type": "password", "label": "Confirmar contraseña", "width": "half-width"}
                  ]
                },
                "images": {
                  "noLocale": [
                    {"name": "avatar", "element":"input", "type": "image", "label": "Avatar", "width": "half-width", "quantity": "single", "imageConfigurations": 
                      {
                        "thumbnail": {
                          "widthPx": "60",
                          "heightPx": "60"
                        },
                        "xs": {
                          "widthPx": "60",
                          "heightPx": "60"
                        },
                        "sm": {
                          "widthPx": "60",
                          "heightPx": "60"
                        },
                        "md": {
                          "widthPx": "60",
                          "heightPx": "60"
                        },
                        "lg": {
                          "widthPx": "60",
                          "heightPx": "60"
                        }
                      } 
                    }
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
}
